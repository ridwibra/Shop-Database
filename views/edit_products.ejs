<%- include('layout/header')%>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Product (<%= product.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= product._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" value="<%= product.name %>" placeholder="Enter name" required/>
                        </div>
                        <div class="mb-3">
                            <label for="expiry">Expiry Date</label>
                            <input type="date" name="expiry" value="<%= product.expiry %>" class="form-control form-control-lg" placeholder="Enter expiry date" required/>
                        </div>
                        <div class="mb-3">
                            <label for="qty">Quantity</label>
                            <input type="number" name="qty" value="<%= product.qty %>" class="form-control form-control-lg" placeholder="Enter quantity" required/>
                        </div>
                        <div class="mb-3">
                            <label for="image">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg"/>
                            <img src="/<%= product.image%>" width="100" class="img-thumbnail mt-1"/>
                        </div>
                        <input type="hidden" name="old_image" value="<%= product.image %>"/>
                        <div class="mb-3 d-grid">
                            <input type="submit" name="submit" value="Update Product" class="btn btn-success btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('layout/footer')%>